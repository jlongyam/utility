{
  "name": "@jlongyam/utility",
  "version": "2.3.1",
  "description": "js basic utility that works on node and browser",
  "main": "./src/index.js",
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/utility.js",
      "require": "./dist/utility.cjs.js"
    }
  },
  "scripts": {
    "test": "node ./test/tester/cross.js",
    "build": "rollup --config",
    "pretty:es": "prettier -w ./dist/utility.js",
    "pretty:cjs": "prettier -w ./dist/utility.cjs.js",
    "pretty": "npm run pretty:es && npm run pretty:cjs",
    "change:patch": "changelog -p && git add CHANGELOG.md",
    "change:majorr": "changelog -M && git add CHANGELOG.md",
    "change:minor": "changelog -m && git add CHANGELOG.md",
    "release:patch": "npm version patch && git push origin && git push origin --tags",
    "release:major": "npm version major && git push origin && git push origin --tags",
    "release:minor": "npm version minor && git push origin && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlongyam/utility.git"
  },
  "keywords": [
    "utility",
    "js-utility",
    "color",
    "display",
    "env",
    "tester",
    "type"
  ],
  "author": "jlongyam",
  "license": "MIT",
  "homepage": "https://jlongyam.github.io/utility",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "generate-changelog": "^1.8.0",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
